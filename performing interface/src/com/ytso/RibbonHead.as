5);			dot.graphics.drawCircle(0,0,17);			dot.graphics.endFill();						this.addChild(dot);			dot.addChild(center);					}						public function recordingVersion(){			center.graphics.clear();			dot.graphics.clear();						center.graphics.beginFill(0xdd0000);			//center.graphics.beginGradientFill(GradientType.LINEAR, [0x999999, 0xcccccc],[1, 1],[0, 255],matr,SpreadMethod.PAD,'rgb');			center.graphics.drawCircle(0,0,12.5);			center.graphics.endFill();			center.rotation += 90;						dot.graphics.beginFill(0xffffff, 1);			//dot.graphics.lineStyle(2, 0x000000, .25);			dot.graphics.drawCircle(0,0,17);			dot.graphics.endFill();					}			}	}